<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exploralocalfinal.Vistas.vResenas"
             Title="vResenas">

    <StackLayout>
        <Label Text="ReseÃ±as" FontSize="24" HorizontalOptions="Center" Margin="0,10,0,10" />
        <ListView ItemsSource="{Binding ResenasConImagenes}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Primera columna: texto -->
                            <Label Grid.Column="0" Text="{Binding texto}" FontSize="12" />

                            <!-- Segunda columna: URL de la imagen -->
                            <Image Grid.Column="1" Source="{Binding url_imagen}" HeightRequest="50" WidthRequest="50" Aspect="AspectFill" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>